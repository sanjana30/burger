<h2>Eat-da-Burger</h2>
<div class="row">
  <div class="col-md-12">
    <form class="create-form">
      <div class="form-group">
        {{!--
        <label for="burgersName">Burger Name</label> --}}
        <input type="text" id="burgersName" name="burgersName" placeholder="Enter Burger Name">
        <span>
          <button type="submit">Add Burger!</button>
        </span>
      </div>
    </form>
  </div>
</div>

<div class="row">
  <div class="col-md-6">
    <h3>Burgers that are not devoured!</h3>
    <ul>
      {{#each burgers}} {{#unless devoured}}
      <div>
        {{burger_name}}
        <span>
          <button id="devour-me" data-id="{{id}}" data-newdevour="{{devoured}}">Devour Me</button>
        </span>
      </div>
      {{/unless}} {{/each}}
    </ul>
  </div>
  <div class="col-md-6">
    <h3>Burgers that are devoured!</h3>
    <ul>
      {{#each burgers}} {{#if devoured}}
      <div>
        {{burger_name}}
      </div>
      {{/if}} {{/each}}
    </ul>
  </div>
</div>